{
  "manifest_version": 3,
  "name": "Time Tracker",
  "description": "Track time actively spent on a website",
  "version": "1.0.0",

  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "action": {
    "default_popup": "time-tracker.html",
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    },
    "default_title": "Click to view time tracker"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
